<configuration>

  <appender name="STDOUT" class="ch.qos.logback.core.ConsoleAppender">
    <encoder>
      <pattern>%highlight(%-5level) %cyan(%logger) - %msg%n</pattern>
    </encoder>
  </appender>

  <logger name="fondue" level="debug"/>

  <root level="warn">
    <appender-ref ref="STDOUT" />
  </root>
</configuration>
